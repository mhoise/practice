# Server
PORT=3001

# MongoDB (get from MongoDB Atlas - free tier)
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority

# Security (generate random strings for production)
SESSION_SECRET=your-random-session-secret-here
CODE_SECRET=your-random-code-secret-here

# User Accounts (set these on first run to create users, then remove)
ADMIN_PASSWORD=elias-password-here
FRIEND_PASSWORD=victor-password-here

# PayPal (for consequence payments)
PAYPAL_ME_USERNAME=your-paypal-username

# Email (for video reviews and notifications)
# Admin (Elias) receives video submissions with approve/reject links
ADMIN_EMAIL=elias-email@example.com
# Friend (Victor) receives reminders and consequence notifications
FRIEND_EMAIL=victor-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# For email links (your deployed URL)
APP_URL=http://localhost:3001

# Cron secret (for Saturday reminder and deadline check endpoints)
CRON_SECRET=your-cron-secret
